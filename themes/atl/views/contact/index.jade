extends ../layout

block content
  .row
    .col-xs-12
      h2 Contact
      a(target='my-window-name', href="/contact/form") Send a message to the brigade
      hr
  .row
    .col-sm-9
      .row
      each user in users
        .col-sm-6
          .row
            .col-sm-3
                img(src="#{user.profile.picture}", width='80')
            .col-sm-9
                h3
                  a(href="#") #{user.profile.name} (name)
                p (position)
                if user.profile.showcontact
                  p
                    a(href="mailto: #{user.email}") email
    .col-sm-3
      h2 See Also
      img(src="http://lorempixel.com/g/240/240/")
      p
        a(href="#") Visualization Budget Lodz
      p We visualize the budget of the city of Lodz
      img(src="http://lorempixel.com/g/240/240/")
  .row
    br
    h2.text-xs-center Partners
    hr
