var projectStatus = {
  "proposed": "label-info",
  "ideation": "label-info",
  "alpha": "label-danger",
  "beta": "label-warning",
  "production": "label-success",
  "archival": "label-success"}

extends ../layout

block content
  .row
    .col-sm-12
      h1.page-header= project.name
  .row
    .col-sm-9
      .banner(style="margin-bottom: 50px;")
        img(src="http://placehold.it/1000x200?text=banner", style="width: 100%;")
      .row
        .col-sm-9
          .description
            |  #{project.description}
          hr
          .born-at
            strong Born at:
            |  #{project.bornAt}
          .project-status
            strong Project status: 
            if (project.status === 'proposed' || project.status === 'ideation')
              span(class="label label-info")  #{project.status}
            if (project.status === 'alpha')
              span(class="label label-danger")  #{project.status}
            if (project.status === 'beta')
              span(class="label label-warning")  #{project.status}
            if (project.status === 'production' || project.status === 'archival')
              span(class="label label-success")  #{project.status}
          .homepage(style="margin-top: 5px;")
            i.fa.fa-home.fa-fw
            a(href="#{project.homepage}") #{project.homepage}
          .repository
            i.fa.fa-github-square.fa-fw
            a(href="#{project.repository}") #{project.repository}
          hr
          .geography
            strong Geography:
            |  #{project.geography}
          .political-entity
            strong Political entity:
            |  #{project.politicalEntity}
          .types
            strong Types:
            |  #{project.types}
          .needs
            strong Needs:
            |  #{project.needs}
          .categories
            strong Categories:
            |  #{project.categories}
          .data
            strong Data: 
            |  #{project.data}
          .keywords
            strong keywords:
            |  #{project.keywords}
        .col-sm-3
