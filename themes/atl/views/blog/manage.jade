extends ../layout

block content
  .page-header
    h3 Manage Blog Posts

    form.row.form-horizontal(action='/blog/manage}', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      div Boo
        each post in posts
          div.row.form-horizontal
            a(href=(post.url !== '' ? post.url : '/blog/post/'+post.slug+'/edit'))
              span #{post.title} | 
              span.author= post.author
              span | Published?
                input(type='checkbox', post.published ? 'checked' : '')
      .form-group.row
        .col-sm-offset-3.col-sm-4
          button.btn.btn.btn-primary(type='submit')
            i.fa.fa-pencilr
            | Save Post
